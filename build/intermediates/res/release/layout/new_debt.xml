<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey">

    <TextView 
        android:id="@+id/accountnametext"
        android:text="@string/accountname"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center" />
    
    
    <EditText
        android:id="@+id/account_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:text="@string/account_name"
        android:layout_toRightOf="@+id/accountnametext"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:text="@string/description"
        android:layout_below="@+id/accountnametext"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center_vertical" />"

    <EditText
        android:id="@+id/account_description"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_toRightOf="@+id/description"
        android:layout_below="@+id/account_name" />

    
   
    
    
	    <TextView
	        android:id="@+id/users"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="5dp"
	        android:textStyle="bold"
	        android:textSize="15sp"
	        android:text="@string/users"
	        android:layout_below="@+id/account_description"
	        android:gravity="center_vertical" />"
	    
"
        
	 <EditText
        android:id="@+id/newperson"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:text="@string/newperson"
        android:layout_toLeftOf="@+id/addbutton"
        android:layout_below="@+id/account_description"/>

	    <ImageButton
	        android:id="@+id/addbutton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:src="@android:drawable/ic_menu_add"
			android:layout_alignParentRight="true"
        android:layout_below="@+id/account_description"/>
    
    
     <View
    	android:id="@+id/line2"
    	android:layout_marginTop="15dp"
    	android:layout_width="fill_parent"
    	android:layout_height="1dip"
    	android:background="@color/gray"
    	android:layout_below="@+id/users"/>
	    
	        
	 <ListView
        android:id="@+id/userlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:layout_below="@+id/line2"/>
	 
	  <View
    	android:id="@+id/line3"
    	android:layout_marginBottom="5dp"
    	android:layout_width="fill_parent"
    	android:layout_height="1dip"
    	android:background="@color/gray"
    	android:layout_below="@+id/userlist"/>
	    

